{
  "id": "/sys/jenkins",
  "instances": 1,
  "cpus": 2,
  "mem": 2048,
  "disk": 0,
  "requirePorts": true,
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "labels": {
    "name": "jenkins-sys",
    "owner": "sys"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "h0tbird/jenkins:v1.646-1",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 80, "hostPort": 0 }
      ],
      "privileged": false,
      "parameters": [
        { "key": "env", "value": "JENKINS_HTTPPORT=80" },
        { "key": "env", "value": "JENKINS_AJP13PORT=-1" },
        { "key": "env", "value": "JENKINS_SYSTEM_MESSAGE=Systems Operations" },
        { "key": "env", "value": "JENKINS_ADMIN_EMAIL=nobody@nowhere" },
        { "key": "env", "value": "MESOS_MASTER=zk://core-1:2181,core-5:2181,core-9:2181/mesos" },
        { "key": "env", "value": "MESOS_FRAMEWORK_NAME=sys-jenkins" },
        { "key": "env", "value": "MESOS_CHECKPOINT=true" },
        { "key": "env", "value": "MESOS_ON_DEMAND_REGISTRATION=true" },
        { "key": "env", "value": "MESOS_IDLE_TERMINATION_MINUTES=5" },
        { "key": "env", "value": "SSL_TRUST=stash.redtonic:443" },
        { "key": "volume-driver", "value": "rbd" },
        { "key": "volume", "value": "sys-jenkins:/var/lib/jenkins" },
        { "key": "security-opt", "value": "label:disable" }
      ],
      "forcePullImage": false
    }
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "maxConsecutiveFailures": 3,
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "timeoutSeconds": 5
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 1
  }
}
